<div class="rounded sponsors">

    <div class="sponsor-section" id="section-sponsors">
        {{#if sponsors.sponsors.title}}
            <h2>{{ sponsors.sponsors.title }}</h2>
        {{/if}}

<div class="sponsor-action" id="section-sponsor">

      <div class="sponsor-button-container">
          <p style="color:#d8953a;display: table;">Quer Patrocinar?</p>
          <a href="/assets/pdfs/CartaPatrocinio_Caipyra2020.pdf" target="_blank" class="button">
              Carta de Patroc√≠nio (pt-br)
          </a>
      </div>
    </div>

        {{#each sponsors.sponsors.categories as |category|}}
            <div>
                <div class="signal {{category.type}}">
                    {{>pylogo }}
                    <div>{{category.type}}</div>
                </div>
                <div class="sponsor-entity-container">
                    {{#each items}}
                        <div class="sponsor-entity {{category.type}}">
                            <a href="{{link}}" target="_blank">
                                <img src="{{photo}}" alt="{{name}}">
                            </a>
                        </div>
                    {{/each}}
                </div>
            </div>
        {{/each}}

        <div class="partners">
            <hr>
            {{#each sponsors.partners}}
                {{#if title}}
                    <h2> {{ title }}</h2>
                {{/if}}
                <div class="sponsor-entity-container">
                    {{#each items}}
                        <div class="sponsor-entity">
                            <a href="{{link}}" target="_blank">
                                <img src="{{photo}}" alt="{{name}}">
                            </a>
                        </div>
                    {{/each}}
                </div>
            {{/each}}
        </div>
    </div>
</div>
